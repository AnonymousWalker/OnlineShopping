@model OnlineShopping.ViewModel.SignUpViewModel

@{
    ViewBag.Title = "Sign up now";
}
@Styles.Render("~/Content/Custom/login.css")
<br />
@Html.Hidden("sign-up-url", Url.Action("SignUp", "Account"))
<div class="login-body-container">
    <h4 class="card-title text-center mb-4 mt-1">Sign up</h4>
    <hr>
    <p class="text-danger text-center">@Html.DisplayTextFor(x => x.Message)</p>
    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
    {
        <div class="form-group">
            <div class="input-group input-group-center">
                @Html.LabelFor(x => x.Username, "Username: ")<span>(*)</span>
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(x => x.Username, null, new { @class = "text-danger" })
            </div> <!-- input-group.// -->
        </div> <!-- form-group// -->
        <div class="form-group">
            <div class="input-group input-group-center">
                @Html.LabelFor(x => x.Password, "Password: ")<span>(*)</span>
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "********", type = "password" })
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-center">
                @Html.LabelFor(x => x.Password, "Re-enter password: ")<span>(*)</span>
                @Html.TextBox("confirm-password", "", new { @class = "form-control", placeholder = "********", type = "password" })

            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-center">
                @Html.LabelFor(x => x.FirstName, "FirstName: ")<span>(*)</span>
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "" })
                @Html.ValidationMessageFor(x=>x.FirstName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-center">
                @Html.LabelFor(x => x.LastName, "LastName:")
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "" })
                @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-center">
                @Html.LabelFor(x => x.Email, "Email:")
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "abc@xyz.com" })
                @Html.ValidationMessageFor(x=>x.Email, "Incorrect email format", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group btn-sign-in">
            <button id="sign-up-btn" class="btn btn-primary btn-block">Create account</button>
        </div>
        <hr>
    }
    <p class="text-center">Already registered? <a href="@Url.Action("Login","Account")" class="">Sign in now</a></p>
</div>
