@{
    ViewBag.Title = "UploadProduct";
}
<link href="~/Content/UploadProduct.css" rel="stylesheet" />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><h3 style="padding-left:10px"><b>Upload new product</b></h3></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div id="leftpanel" class="col-md-6">
                    <div class="form-group">
                        <label>Product Name: </label><input type="text" class="form-control" id="productname">
                    </div>
                    <div class="form-group">
                        <label>Price: </label><input type="text" class="form-control" id="price">
                    </div>
                    <div class="form-group">
                        <label>Description: </label><input type="text" class="form-control" id="description">
                    </div>
                    <div class="form-group">
                        <label>Choose image: </label>
                        <span id="fileBrowser" class="btn btn-default">
                            Browse
                            <input id ="browserbtn"type="file" class="upload" />
                        </span>
                    </div>
                </div>
                <div id="rightpanel" class="col-md-6">
                    <div class="form-group">
                        <label>Preview</label><br/>
                        <span>
                            <img id="image" src="http://placehold.it/350" alt="your image" />
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

