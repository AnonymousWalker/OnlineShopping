@model EditProductViewModel

<div id="editmodal" class="modal fade" role="dialog">
    @Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { @class = "form-horizontal" })
    {
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit product info</h4>
            </div>

            <div class="modal-body">
                @Html.HiddenFor(x => x.ProductId)
                <div class="form-group">
                    @Html.LabelFor(x => x.ProductName, new { @class = "control-label col-md-3" })
                    <div class=" col-md-8">
                        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Quantity, new { @class = "control-label col-md-3" })
                    <div class=" col-md-2">
                        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(x => x.Quantity)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Price, new { @class = "control-label col-md-3" })
                    <div class=" col-md-4">
                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Price)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.SalePrice, new { @class = "control-label col-md-3" })
                    <div class=" col-md-4">
                        @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.SalePrice)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Description, new { @class = "control-label col-md-3" })
                    <div class=" col-md-8">
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
    }
</div>