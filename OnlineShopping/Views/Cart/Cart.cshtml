@model CartViewModel
@{
    ViewBag.Title = "Cart";
}

@Styles.Render("~/Content/Custom/cart.css")

<h3>My Shopping Cart</h3>
@Html.Hidden("RemoveFromCartUrl", Url.Action("RemoveFromCart", "Cart"))
<div id="cartitems">
    @Html.Partial("_CartTable", Model)
</div>
<div class="text-right" style="margin-right:20px;">
    <a id="check-out-btn" class="btn btn-lg btn-success" href="@Url.Action("Checkout","Cart")">Checkout</a>
</div>
@section scripts
{
    @Scripts.Render("~/Scripts/Custom/Cart.js")
}