@model ProductViewModel

<div class="col-md-3">
    <div class="thumbnail">
        <h4>@Html.ActionLink(Model.ProductName, "ProductInformation", "Product", new { id = Model.ProductId }, new { @class = "btn btn-lg btn-block" })</h4>
        <div class="square">
            <a class="thumbnail-link" href="@Url.Action("ProductInformation","Product", new { id = Model.ProductId })">
                <img class="thumbnailImg" src="@Model.ImageSource" />
            </a>
        </div>
        <div class="row inputgroup">
            <div class="col-md-12">
                <a id="pricetag" class="btn btn-toolbar" href="@Url.Action("ProductInformation","Product", new { id = Model.ProductId })">$ @Html.DisplayFor(x => x.Price)</a>
                <button id="cartplus" class="btn btn-warning">+ <i class="fa fa-cart-arrow-down"></i></button>
            </div>
        </div>
    </div>
</div>