<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Quick Shopping", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <a class="dropdown-toggle" href="#dropdown" data-toggle="dropdown">All Categories</a>
                    @Html.Partial("_Category")
                </li>
                <li><a href="@Url.Action("Sales","Home")">Sales</a></li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a><i class="glyphicon glyphicon-search"></i></a>
                </li>
                <li>
                    <div id="searchpane">
                        <input id="searchtextbox" data-url="@Url.Action("FilterProduct","Product")"
                               class="form-control" type="text" placeholder="Search..." style="float:right" />
                    </div>
                </li>
                <li>
                    @Html.Hidden("CartCounterUrl", Url.Action("GetCartCounter", "Cart"))
                    <a id="cart-link" href="@Url.Action("Index","Cart")">
                        <i class="glyphicon glyphicon-shopping-cart"></i>
                        <sup id="cart-counter"></sup>
                    </a>
                </li>
                <li>
                    @Html.Action("UploadProductNavLink","Product")
                </li>
                <li id="nav-account">
                    <a href="#" onclick="">
                        <i class="fa fa-user"></i>
                    </a>
                    @Html.Partial("_UserAccount")
                </li>
            </ul>
        </div>
    </div>
</div>

