<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OnlineShopping</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/customLayout")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body @*style="background-image:url('/Content/Picture/background-white.jpg')"*@>
    @Html.Partial("_NavigationBar")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="font-style:italic">Hoang Anh's Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
